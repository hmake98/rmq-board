<div class="card">
    <div class="card-header">
        Publish Message
    </div>
    <div class="card-body">
        <form id="publish-form" class="publish-form">
            <div class="form-group">
                <label for="exchange-select" class="form-label">Exchange</label>
                <select id="exchange-select" class="form-select" required>
                    <option value="">Select an exchange</option>
                    <!-- Options will be populated dynamically -->
                </select>
            </div>
            <div class="form-group">
                <label for="routing-key" class="form-label">Routing Key</label>
                <input type="text" id="routing-key" class="form-input" required>
            </div>
            <div class="form-group">
                <label class="form-label">Message Properties</label>
                <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                    <div style="flex: 1; min-width: 150px;">
                        <label for="content-type" class="form-label" style="font-size: 0.75rem;">Content Type</label>
                        <input type="text" id="content-type" class="form-input" placeholder="application/json">
                    </div>
                    <div style="flex: 1; min-width: 150px;">
                        <label for="correlation-id" class="form-label" style="font-size: 0.75rem;">Correlation
                            ID</label>
                        <input type="text" id="correlation-id" class="form-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="message-payload" class="form-label">Payload (JSON or plain text)</label>
                <textarea id="message-payload" class="form-textarea" required></textarea>
            </div>
            <div class="form-actions">
                <button type="button" id="format-json" class="button button-secondary">Format JSON</button>
                <button type="submit" class="button button-primary">Publish Message</button>
            </div>
        </form>
    </div>
</div>